<%- include("header.ejs") %>

<div class="d-flex flex-column min-vh-100">
  <div class="container-fluid bg-dark flex-grow-1 p-0">
    <% if (locals.member) { %>
      <div class="container-fluid default-image" dir="rtl">
        <img src=<%- themeImage %> class="img-fluid mx-auto py-3 d-block default-image" alt="Rollieflex Camera" />
      </div>
    <% } else { %>
      <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel" dir="rtl">
        <!-- The slideshow/carousel -->
        <div class="carousel-inner container-l">
          <div class="carousel-item active rb-carousel-item">
            <div class="d-flex justify-content-center">
              <img src="members/רחל רינת הילינג/14.jpg" alt="רחל רינת בילינג" class="carousel-image">
            </div>
          </div>
          <div class="carousel-item rb-carousel-item">
            <div class="d-flex justify-content-center">
              <img src="members/רונן בונה/trix-200-tlv-22-2.jpg" alt="רונן בונה" class="carousel-image">
            </div>
          </div>
          <div class="carousel-item rb-carousel-item">
            <div class="d-flex justify-content-center">
              <img src="members/משה גרוס/DSC0781.jpg" alt="משה גרוס" class="carousel-image">
            </div>
          </div>
        </div>
        
        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    <% } %>
  </div>

  <% if (locals.tableBody) { %>
    <%- tableBody %>
  <% } else if (locals.blogForm) { %>
    <%- blogForm %>
  <% } %>

</div>

<%- include("footer.ejs") %>

<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"></script>


</html>
